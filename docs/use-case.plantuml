@startuml
!theme plain
left to right direction
scale 1

skinparam backgroundColor #f0ece5

skinparam usecase {
    BackgroundColor LightBlue
    BorderColor DarkBlue
}

skinparam actor {
    BackgroundColor LightGreen
    BorderColor DarkGreen
}

title Real Estate Management System

' Actors (top)
actor Guest
actor User
actor Manager
actor Admin

Guest <|-- User
User <|-- Manager
Manager <|-- Admin

rectangle "System" {

    usecase "Browse & Search\nApartments" as UC1
    usecase "View Details" as UC2
    usecase "Authentication\n(Login / Register)" as UC3
    usecase "Favorites" as UC4
    usecase "Book / Purchase\nApartment" as UC5
    usecase "Payment" as UC6
    usecase "Property & Order\nManagement" as UC7
    usecase "System\nAdministration" as UC8
    usecase "User\nManagement" as UC9
    usecase "Filter buildings" as UC10
    usecase "View order\nHistory" as UC11
}

' Connections
Guest --> UC1
Guest --> UC2
Guest --> UC3
Guest --> UC10

User --> UC4
User --> UC5
UC5 ..> UC6 : <<include>>
User --> UC11

Manager --> UC7
Admin --> UC8
Admin --> UC9

@enduml
